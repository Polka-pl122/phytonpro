summ= 0
p = 1
#b = list[i]%2=0
#c = i%2
n = int(input('Сколько элементов? '))
list1=[]
for i in range(n):
    x = int(input('Введите число '))
    list1.append(x)
    
for i in range(len(list1)):

    if (((list1[i]%2==0)==(i%2==0))or((list1[i]%2!=0)==(i%2!=0))):
        summ+=1
        
    
print(summ)

