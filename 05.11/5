x = int(input("Сумма, потраченная за последний месяц "))

if ((x >= 1000) and (x < 2000)):
    print("Цена: ", x)
    print("Скидка: ", 5)
    print("Сумма: ", x-(x*0.05))

if ((x >= 2000) and (x < 5000)):
    print("Цена: ", x)
    print("Скидка: ", 10)
    print("Сумма: ", x-(x*0.1))

if (x > 5000):
    print("Цена: ", x)
    print("Скидка: ", 15)
    print("Сумма: ", x-(x*0.15))
