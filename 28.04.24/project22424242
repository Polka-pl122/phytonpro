x = str(input('Введите пароль '))
#Пароль должен соответсвовать данным параметрам:
#содержит не менее 8 символов
#содержит хотя бы одну цифру
#не имеет повторяющихся символов, идущих подряд
#не содержит следующих символов: !@№$%^&*()=+"
#пароль не содержит русских букв
a = 'ABCDEFGHIJKLMNOPQRSTUVWXYZ'
b = 'abcdefghijklmnopqrstuvwxyz'
c = '1234567890'
d = '!@№$%^&*()=+"'
e = 'абвгдеёжзийклмнопрстуфхцчшщъыьэюя'
f = 'АБВГДЕЁЖЗИЙКЛМНОПРСТУФХЦЧШЩЪЫЬЭЮЯ'

#проверка на дурака:

if (x==d):
    print('Пароль содержит запрещённые символы')
if (x=e or x=f):
    print('Пароль содержит запрещённые символы')

